@model OrderViewModel
<h1>Cosul meu</h1>

<form asp-action="PlaceOrder" method="post">
    <h3>Produse in Cos</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Produs</th>
                <th>Cantitate</th>
                <th>Pret</th>
                <th>Total</th>
             </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                <tr>
                    <td>@Model.OrderItems[i].ProductName</td>
                    <td>@Model.OrderItems[i].Quantity</td>
                    <td>@Model.OrderItems[i].Price</td>
                    <td></td>
                </tr>
            }
                <tr>
                <td></td>
                <td></td>
                <td></td>
                <td class="bg-primary bg-gradient text=white fw-bold">@Model.TotalAmount Lei</td>
                </tr>
        </tbody>
    </table>
    <div class="form-group">
         <input type="submit" value="Plaseaza Comanda" class="btn btn-primary" />
    </div>
</form>